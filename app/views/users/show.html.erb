<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>

<div class="mt-4">
  <% if logged_in? && @user == current_user %>
    <div class="row">
      <div class="col text-end">
        <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
      </div>
      <div class="col text-start">
        <%= button_to "Delete your profile", user_path(@user), class: "btn btn-outline-danger", method: :delete %>
      </div>
    </div>
  <% end %>
</div>

<h3 class="text-center mt-4">Articles</h3>


<div class="flickr_pagination">
  <%= will_paginate @articales, :container => false %>
</div>

<%= render 'articales/article' %>

