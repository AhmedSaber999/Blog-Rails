<div class="container">
  
  <%= render "articales/validation_messages"%>

   <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @articale, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row mt-1">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>  
        
        <div class="form-group row justify-content-center mt-2">
          <%= f.submit class: "btn btn-outline-light" %>
        </div>
      <% end %>
    </div>
    <div class="row justify-content-center">
      <%= link_to '[ Cancel and return to articles listing ]', articales_path, class: "text-info" %>
    </div>
  </div>
</div> 